<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <TextView
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather Prediction App"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        >

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota :"
            android:textSize="26sp"
            >

        </TextView>
        <EditText
            android:id="@+id/namaKota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btnProces"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Process"
        >
    </Button>
    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#991E6297"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result prediction"
        android:textSize="23sp">
    </TextView>
    <TextView
        android:id="@+id/todayDate"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="23sp">
    </TextView>
    <TextView
        android:id="@+id/resultToday"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/tomoroDate"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="23sp">
    </TextView>
    <TextView
        android:id="@+id/resultTomorow"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/lusaDate"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="23sp">
    </TextView>
    <TextView
        android:id="@+id/resultLusa"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp">
    </TextView>
    <TextView
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powered by : openweathermap.org"
        android:textSize="14sp"
        android:textStyle="bold"
        >
    </TextView>
</LinearLayout>